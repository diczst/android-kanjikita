<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/kanji_text_view_word"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"/>
    <View
        android:id="@+id/mean_text_view_word"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_below="@id/kanji_text_view_word"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/darker_gray"/>

    <View
        android:id="@+id/kanji_text_view_furigana"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_toStartOf="@id/icon_checked"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"/>
    <View
        android:id="@+id/mean_text_view_romaji"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_below="@id/kanji_text_view_furigana"
        android:layout_toStartOf="@id/icon_checked"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"/>

    <View
        android:id="@+id/icon_checked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>

</RelativeLayout>

